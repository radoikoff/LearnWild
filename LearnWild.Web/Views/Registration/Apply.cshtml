@model EnrolToCourseFormModel

@{
	ViewData["Title"] = "Enroll for course";
}

<h3 class="text-center">Enrollment for course @Model.CourseTitle</h3>
<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<div class="d-flex justify-content-evenly">
			<h6>Start: <b>@Model.CourseStart</b></h6>
			<h6>End: <b>@Model.CourseStart</b></h6>
		</div>
	</div>
</div>

<hr />

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">

		<div asp-validation-summary="ModelOnly" class="small text-danger"></div>
		<form method="post" class="row g-3">
			<input type="hidden" asp-for="CourseId" />
			<input type="hidden" asp-for="StudentId" />
			<div class="form-group col-md-6">
				<label asp-for="FirstName"></label>
				<input asp-for="FirstName" class="form-control" disabled>
			</div>
			<div class="form-group col-md-6">
				<label asp-for="LastName"></label>
				<input asp-for="LastName" class="form-control" disabled>
			</div>
			<div class="form-group">
				<label asp-for="AcceptGeneralConditions" class="form-check-label me-2"></label>
				<input asp-for="AcceptGeneralConditions" class="form-check-input">
				<span asp-validation-for="AcceptGeneralConditions" class="small text-danger"></span>
			</div>
			<div class="text-center mt-2">
				<input class="btn btn-success" type="submit" value="Enroll" />
				<a asp-controller="Course" asp-action="All" class="btn btn-outline-secondary">Back</a>
			</div>
		</form>
	</div>
</div>