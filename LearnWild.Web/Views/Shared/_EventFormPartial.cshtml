@model EventFormModel

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<div class="card mb-3">
			<div class="card-body">
				<h5 class="card-text">Course: @Model.Course!.Title</h5>
				<p class="card-text mb-0">Duration: @Model.Course.Duration h</p>
				<p class="card-text mb-0">Credits: @Model.Course.Credits h</p>
				@if (Model.Course.Price.HasValue)
				{
					<p class="card-text">Price: @($"{Model.Course.Price:f2}") BGN</p>
				}
				<span class="badge bg-success">@Model.Course.Type</span>
				<span class="badge bg-success">@Model.Course.Category</span>
			</div>
		</div>
		<div class="card">
			<div class="card-body">
				<form method="post" class="row g-3">
					<div class="form-group col-md-6">
						<label asp-for="Start"></label>
						<input asp-for="Start" class="form-control">
						<span asp-validation-for="Start" class="small text-danger"></span>
					</div>
					<div class="form-group col-md-6">
						<label asp-for="End"></label>
						<input asp-for="End" class="form-control">
						<span asp-validation-for="End" class="small text-danger"></span>
					</div>
					<div class="form-group col-md-6">
						<label asp-for="TeacherId"></label>
						<select asp-for="TeacherId" class="form-control">
							@foreach (var teacher in Model.Teachers)
							{
								<option value="@teacher.Id">@teacher.Name</option>
							}
						</select>
						<span asp-validation-for="TeacherId" class="small text-danger"></span>
					</div>
					<div class="form-group col-md-6 d-flex align-items-center">
						<label asp-for="Active" class="form-check-label me-2"></label>
						<input asp-for="Active" class="form-check-input">
					</div>


					<div class="text-center">
						<input class="btn btn-primary mt-3" type="submit" value="Save" />
					</div>
				</form>
			</div>
		</div>

	</div>
</div>
