@model CourseFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <div asp-validation-summary="ModelOnly" class="small text-danger"></div>
        <form method="post" class="row g-2">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Title...">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" placeholder="Description..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Start"></label>
                <input asp-for="Start" class="form-control">
                <span asp-validation-for="Start" class="small text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="End"></label>
                <input asp-for="End" class="form-control">
                <span asp-validation-for="End" class="small text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Credits"></label>
                <input asp-for="Credits" class="form-control">
                <span asp-validation-for="Credits" class="small text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group col-md-4 d-flex align-items-center">
                <label asp-for="Active" class="form-check-label  me-2"></label>
                <input asp-for="Active" class="form-check-input">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-select">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="TypeId"></label>
                <select asp-for="TypeId" class="form-select">
                    @foreach (var type in Model.Types)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="TeacherId"></label>
                <select asp-for="TeacherId" class="form-select">
                    @foreach (var teacher in Model.Teachers)
                    {
                        <option value="@teacher.Id">@teacher.Name</option>
                    }
                </select>
                <span asp-validation-for="TeacherId" class="small text-danger"></span>
            </div>


            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
